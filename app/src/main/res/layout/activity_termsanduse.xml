<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Termsanduse">

    <include layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout1"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="18dp">

                <EditText
                    android:id="@+id/cond1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text_round_gray_background"
                    android:drawableLeft="@drawable/ic_baseline_looks_one_24"
                    android:drawablePadding="16dp"
                    android:hint="Cond1"
                    android:inputType="textMultiLine"
                    android:padding="12dp" />


                <EditText
                    android:id="@+id/cond2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text_round_gray_background"
                    android:drawableLeft="@drawable/ic_baseline_looks_two_24"
                    android:drawablePadding="16dp"
                    android:hint="Cond2"
                    android:inputType="textMultiLine"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/cond3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text_round_gray_background"
                    android:drawableLeft="@drawable/ic_baseline_looks_3_24"
                    android:drawablePadding="16dp"
                    android:hint="Cond3"
                    android:inputType="textMultiLine"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/cond4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text_round_gray_background"
                    android:drawableLeft="@drawable/ic_baseline_looks_4_24"
                    android:drawablePadding="16dp"
                    android:hint="Cond4"
                    android:inputType="textMultiLine"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/cond5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text_round_gray_background"
                    android:drawableLeft="@drawable/ic_baseline_looks_5_24"
                    android:drawablePadding="16dp"
                    android:hint="Cond4"
                    android:inputType="textMultiLine"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/cond6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/edit_text_round_gray_background"
                    android:drawableLeft="@drawable/ic_baseline_looks_6_24"
                    android:drawablePadding="16dp"
                    android:hint="Cond4"
                    android:inputType="textMultiLine"
                    android:padding="12dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_view_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Forget Password?"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="gone" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/nointenet"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nointenetimg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="200dp"
                    android:contentDescription="@string/app_name"
                    android:foregroundGravity="center_horizontal"
                    android:src="@drawable/nointernet"
                    >

                </ImageView>


            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</LinearLayout>