<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <LinearLayout
        android:id="@+id/connected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/tchnodynamic_flash_screen1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="1dp"
            android:gravity="bottom|center_horizontal"
            android:inputType="textMultiLine"
            android:text="- We Build Android App | That Reach Thousands - "
            android:textColor="@color/white"
            android:textSize="20sp" />


        <Button
            android:id="@+id/btn_annonymous"
            android:layout_width="200dp"
            app:cornerRadius="20dp"
            android:background="@drawable/button_backgroud"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="450dp"
            android:drawableLeft="@drawable/ic_baseline_group_24"
            android:padding="10dp"
            android:text="Anonymous Login"
            android:textAllCaps="false"
            android:textColor="@color/black">

        </Button>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/nointenet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:src="@drawable/nointernet">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="No Internet"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone">

        </TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


